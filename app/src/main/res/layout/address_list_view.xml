<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFFFFF"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/adds_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/adds_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123123" />

    </LinearLayout>


    <TextView
        android:id="@+id/adds_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湖北省,武汉市,花果山,美帘洞" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioButton
            android:id="@+id/adds_isDefault"
            android:layout_marginLeft="-5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_marginRight="10dp"
            android:background="@drawable/bian_kuang"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:id="@+id/adds_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑" />

        <TextView
            android:background="@drawable/bian_kuang"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:id="@+id/adds_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>
</LinearLayout>
