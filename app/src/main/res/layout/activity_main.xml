<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_marginTop="1dp"
        android:background="#77000000"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <RadioGroup
        android:id="@+id/main_rg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RadioButton
            android:background="@drawable/home_seletor"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/main_home_rb"
            android:checked="true"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:background="@drawable/classify_seletor"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/main_classify_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:background="@drawable/discover_seletor"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/main_discover_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:background="@drawable/cart_seletor"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/main_cart_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:background="@drawable/mine_seletor"
            android:button="@null"
            android:id="@+id/main_mine_rb"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </RadioGroup>


</LinearLayout>
