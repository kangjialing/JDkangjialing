<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/orderBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/leftjiantou" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单列表"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/DD_selected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/sandian" />

    </LinearLayout>


    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <RadioButton
            android:background="@drawable/select_order"
            android:button="@null"
            android:id="@+id/DD_all"
            android:gravity="center"
            android:textSize="14sp"
            android:text="全部订单"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0.3dp"
            android:background="#60000000"
            android:layout_height="match_parent"/>

        <RadioButton
            android:background="@drawable/select_order"
            android:button="@null"
            android:id="@+id/DD_DZF"
            android:gravity="center"
            android:textSize="14sp"
            android:text="待支付"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0.3dp"
            android:background="#60000000"
            android:layout_height="match_parent"/>

        <RadioButton
            android:background="@drawable/select_order"
            android:button="@null"
            android:id="@+id/DD_YZF"
            android:gravity="center"
            android:textSize="14sp"
            android:text="已支付"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0.3dp"
            android:background="#60000000"
            android:layout_height="match_parent"/>

        <RadioButton
            android:background="@drawable/select_order"
            android:button="@null"
            android:id="@+id/DD_YQX"
            android:gravity="center"
            android:textSize="14sp"
            android:text="已取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </RadioGroup>

    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dd_listViwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>